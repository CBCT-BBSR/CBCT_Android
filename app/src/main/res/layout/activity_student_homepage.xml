<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/centre_background"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="end"
        android:src="@drawable/enquiry_bk" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Homepage"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="#E4E0E0"/>
    <View
        android:layout_width="380dp"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#D6D60C" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_credit_record"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/mock_back"
            android:src="@drawable/record" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Credit Record"
            android:background="#34A3D5"
            android:textSize="18sp"
            android:textColor="#011681"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_calulator"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="13dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/mock_back"
                android:src="@drawable/calculator" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="SGPA Calculator "
                android:background="#34A3D5"
                android:textSize="18sp"
                android:textColor="#011681"/>


        </LinearLayout>

    </LinearLayout>



    <ImageView
        android:id="@+id/iv_backlog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="13dp"
       android:layout_gravity="center"
        android:background="@drawable/mock_back"
        android:src="@drawable/backlog" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"

        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Backlogs"
        android:background="#34A3D5"
        android:textSize="18sp"
        android:textColor="#011681"/>

</LinearLayout>

