<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/centre_background"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="end"
        android:src="@drawable/enquiry_bk" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty Homepage"
        android:layout_marginTop="20dp"
        android:textSize="45sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="#E4E0E0"/>
    <View
        android:layout_width="380dp"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#D6D60C" />
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/mock_back">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="Enter Student Id"
            android:textColor="#1E88E5"
            android:textSize="45sp" />
        <EditText
            android:id="@+id/et_faculty_search_studentid"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="#9C0236"
            android:hint="Enter Student Id "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="#1E88E5" />


        <View
            android:layout_width="330dp"
            android:layout_height="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:background="#1E88E5" />

        <Button
            android:id="@+id/btn_goto_faculty_fetch_details"
            android:layout_gravity="center"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/centre_button"
            android:text="Fetch Detail's"
            android:textColor="#ffffff"
            android:textSize="25sp" />


    </LinearLayout>

</LinearLayout>